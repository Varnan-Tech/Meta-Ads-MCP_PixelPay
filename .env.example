# Meta API Configuration
# Get your access token from: https://developers.facebook.com/tools/explorer/
META_ACCESS_TOKEN=your_meta_access_token_here

# Optional: Meta App credentials (if using app-based authentication)
META_APP_ID=your_app_id_here
META_APP_SECRET=your_app_secret_here

# Optional: Default ad account ID (format: act_123456789 or just the numeric ID)
DEFAULT_AD_ACCOUNT=your_default_ad_account_id_here

# Environment Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# Rate Limiting (optional - defaults provided)
MAX_REQUESTS_PER_HOUR=200
CACHE_TTL=300
ENABLE_CACHE=true

# Token Storage (optional - default path provided)
# TOKEN_STORAGE_PATH=~/.meta-ads-mcp/tokens.json
